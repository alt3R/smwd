<%= form_with model: @person do |form| %>
  <div>
    <%= form.label :full_name %><br>
    <%= form.text_field :full_name %><br>
    <% @person.errors.full_messages_for(:full_name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div>
    <%= form.label :birthday %><br>
    <%= form.date_field :birthday %>
  </div>
  <div>
    <%= form.label :country %><br>
    <%= form.country_select :country, selected: 'RU' %>
  </div>
  <div>
    <%= form.label :region %><br>
    <%= form.text_field :region %>
  </div>
  <div>
    <%= form.label :city %><br>
    <%= form.text_field :city %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
